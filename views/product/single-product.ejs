<style>
    .card img {
        height: 300px;
        width: 500px;
        margin-bottom: 20px;
    }
    .card-text {
        text-align: justify;
    }
    .comments {
        margin-top: 3vh;
    }
    .comment-form {
        width: 100%;
        display: flex;
    }
    .comment-form > * {
        margin: 0 5px;
    }
    .comment-form input {
        flex-grow: 1;
        height: 6vh;
        font-size: 20px;
        border-radius: 10px;
        border-color: dodgerblue;
        padding: 5px 10px;
    }
    .comment-form input:focus {
        outline: none;
    }
    .comment-form button {
        border-radius: 10px;
        padding: 0 10px;
        background: white;
        color: dodgerblue;
        border-color: dodgerblue;
    }
    .comment-form button:hover {
        color: white;
        background: dodgerblue;
    }
    @media (max-width: 720px) {
        .card img {
            height: 150px;
            width: 250px;
        }
        .comment-form {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 8vh);
        grid-template-areas:
        'i i'
        'b .';
    }
    .comment-form input {
        grid-area: i;
    }
    .comment-form button {
        grid-area: b;
    }
    }
</style>
<div class="container" style="margin-top: 10vh; margin-bottom: 10vh;">
    <div class="card">
        <div class="card-header">Category: <%= product.category %></div>
        <div class="card-body">
            <div class="row">
                <img
                    class="col-md-6 col-sm-12"
                    src="<%= product.imagePath %>"
                    alt="Product Image"
                />
                <div class="col-md-6 col-sm-12">
                    <h5 class="card-title"><%= product.title %></h5>
                    <p><strong>Price: &#2547; <%= product.price %></strong></p>
                    <p>
                        <strong
                            >Seller: <%= seller == null ? 'Admin' : seller.email
                            %></strong
                        >
                    </p>
                    <% if( product.inStock > 0 ) { %>
                    <p style="color: green">
                        <strong
                            >Product in stock: <%= product.inStock %></strong
                        >
                    </p>
                    <% if( typeof user == 'undefined' || user.role === 'buyer' ) { %>
                        <a
                        href="/cart/add<%= product._id %>"
                        class="btn btn-success"
                        >Add to Cart</a>
                    <% } %>
                    <% } else { %>
                    <p style="color: red">
                        <strong>Out of stock</strong>
                    </p>
                    <% } %>
                </div>
            </div>
            <strong>Short Intro</strong>
            <hr />
            <p class="card-text"><%= product.description %></p>
            <strong>Full Description</strong>
            <hr />
            <p class="card-text">
                <% if(typeof product.detail_info != 'undefined') { %> <%=
                product.detail_info %> <% } else { %> 'Nothing to show' <% } %>
            </p>
            <!-- Comments Section -->
            <div class="comments">
                <strong>Comments</strong>
                <hr />
                <div class="list-group">
                    <% if(typeof user != 'undefined' && user.role == 'buyer') { %>
                    <div class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <form class="comment-form" action="/products/comments/add" method="POST">
                                <input type="hidden" name="id" value="<%= product._id %>">
                                <input
                                    type="text"
                                    class="comment-input"
                                    name="comment"
                                    placeholder="Write your comments here"
                                    required
                                />
                                <button type="submit" class="comment-submit">
                                    Comment
                                </button>
                            </form>
                        </div>
                    </div>
                    <% } else { %>
                        <a href="/login" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1 text-info">Login / Register to comment</h5>
                            </div>
                        </a>
                    <% } %>

                    <% if( (product.comments).length > 0 ) { %>
                        <% for( let i = 0; i < (product.comments).length; i++ ) { %>
                            <a href="#" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1 text-info"><%= (product.comments)[i].userName %></h5>
                                    <small><%= (product.comments)[i].posted %></small>
                                </div>
                                <p class="mb-1">
                                    <%= (product.comments)[i].comment %>
                                </p>
                            </a>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%= user.role %>