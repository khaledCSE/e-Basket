<div class="container col-md-4 col-sm-10" id="main">
    <h1 class="text-center">Register</h1>
    
    <% if( typeof messages.info != 'undefined' ) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong><%= messages.info %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
    <% } %>
    
    <form action="/auth/register" method="post">
        <div class="element">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email" id="email" />
        </div>
        <div class="element">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" id="password" />
        </div>
        <div class="element" style="margin-top: 3vh;"><label for="role">Role:</label>
            <select class="form-control" name="role" id="role">
                <option value="admin">Admin</option>
                <option value="delivery_man">Delivery Man</option>
                <option value="seller">Seller</option>
                <option value="buyer">Buyer</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success btn-block" style="margin-top: 3vh; margin-bottom: 3vh;">Register</button>
    </form>
    <a href="/login">Already have an account? | Login</a>
</div>