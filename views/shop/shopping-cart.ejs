<link rel="stylesheet" href="/css/shop/checkout.css">
<%- include('../partials/messages') %>


<% if(products) { %>
  <% if(totalPrice != 0) { %>
    <div class="row" id="main" style="width: 80%;margin-left: auto; margin-right: auto; padding: 30px 10px 30px 10px;">
      <div class="col-lg-10 col-md-11 offset-md-1">
        <h1 class="text-center" style="color: rgb(2, 2, 41); font-weight: bold;">Your e-Bakset</h1>
          <table class="table" style="width: 100%;">
              <thead class="thead" style="background-color: rgb(2, 2, 41); color: greenyellow;">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Product</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Price</th>
                  <th scope="col"><center>Action</center></th>
                </tr>
              </thead>
              <tbody>
                <% for( var i = 0; i < products.length; i++ ) { %>
                  <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= products[i].item.title %></td>
                    <td style="font-weight: bold"><%= products[i].qty %></td>
                    <td><%= products[i].price %></td>
                    <td class="pull-right">
                      <a href="/cart/increase/<%= products[i].item._id %>" class="btn btn-success">Add by 1</a> &nbsp;
                      <a href="/cart/reduce/<%= products[i].item._id %>" class="btn btn-warning">Reduce by 1</a> &nbsp;
                      <a href="/cart/remove/<%= products[i].item._id %>" class="btn btn-danger">Remove Product</a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
              <h3>Total: &#2547;<%= totalPrice %></h3>
              <a href="/payments/checkout" class="btn btn-success btn-lg" style="margin-top: 3vh;">Checkout <i class="fa fa-credit-card-alt" aria-hidden="true"></i></a>
      </div>
  </div>
  <% } else { %>
    <div class="container text-center">
      <h1 style="margin-top: 30vh;"><i class="fa fa-frown-o" style="font-size: 80px; color: indigo;" aria-hidden="true"></i></h1>
      <h3 style="color: indigo; font-weight: bolder;">No Items in the shopping cart!</h3>
    </div>
  <% } %>
<% } else { %>
  <div class="container text-center">
    <h1 style="margin-top: 30vh;"><i class="fa fa-frown-o" style="font-size: 80px; color: indigo;" aria-hidden="true"></i></h1>
    <h3 style="color: indigo; font-weight: bolder;">No Items in the shopping cart!</h3>
  </div>
<% } %>